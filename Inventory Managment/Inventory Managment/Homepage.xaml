<Window x:Class="Inventory_Managment.Homepage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory_Managment"
        mc:Ignorable="d"
        Title="Homepage"
        MinHeight="700"
        MinWidth="900"
        WindowState="Maximized">
    <Grid>

        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="38" Margin="0,0,-0.4,0">
                <!--Users-->
                <MenuItem Header="_User" Height="45" Width="72" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold">
                    <MenuItem x:Name="menu_add_user" Header="_Add /User" Click="menu_add_user_Click"/>
                </MenuItem>

                <!--Units-->
                <MenuItem Header="_Units" Height="45" Width="78" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold">
                    <MenuItem x:Name="menu_add_units" Header="_Add /Units" Click="menu_add_units_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>

    </Grid>
</Window>
